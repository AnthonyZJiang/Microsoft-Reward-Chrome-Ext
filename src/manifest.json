{
  "manifest_version": 2,
  "name": "Microsoft Rewards Bot",
  "version": "2.0",
  "icons": {
    "16": "img/bingRwLogo@1x.png",
    "24": "img/bingRwLogo@1.5x.png",
    "32": "img/bingRwLogo@2x.png",
    "48": "img/bingRwLogo@3x.png",
    "128": "img/bingRwLogo@8x.png"
  },

  "background": {
    "persistent": true,
    "scripts": [
      "status/DailyQuest.js",
      "status/DailyRewardStatus.js",
      "quest/searchQuest.js",
      "quest/googleTrend.js",
      "quest/quizDailyQuest.js",
      "cookies.js",
      "badge.js",
      "exception.js",
      "notification.js",
      "background.js",
      "test.js"
    ]
  },

  "browser_action": {
    "default_title": "Microsoft Rewards Bot",
    "default_popup": "popup/popup.html"
  },

  "permissions": ["activeTab",
    "https://www.bing.com/search?q=*",
    "https://trends.google.com/trends/hottrends/atom/feed?pn=p*",
    "https://account.microsoft.com/rewards/pointsbreakdown*",
    "webRequest",
    "webRequestBlocking",
    "notifications",
    "cookies",
    "https://.account.microsoft.com/",
    "storage"
  ]
}